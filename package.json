{
  "name": "prettier-vscode",
  "displayName": "Prettier - JavaScript formatter",
  "description": "VS Code plugin for jlongster/prettier",
  "version": "0.1.2",
  "publisher": "esbenp",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onCommand:prettier.format"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "prettier.format",
        "title": "Prettier: Format Javascript"
      }
    ],
    "configuration": {
        "type": "object",
        "title": "Prettier - JavaScript formatter configuration",
        "properties": {
            "prettier.formatOnSave": {
                "type": "boolean",
                "default": false,
                "description": "Format on save"
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "prettier": "0.0.3"
  }
}
